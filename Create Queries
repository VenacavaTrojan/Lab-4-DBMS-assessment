To cerate Schema
CREATE SCHEMA `demo` ;

Create Table Supplier:
CREATE TABLE `demo`.`supplier` (
  `SUPP_ID` INT NOT NULL,
  `SUPP_NAME` VARCHAR(50) NOT NULL,
  `SUPP_CITY` VARCHAR(50) NOT NULL,
  `SUPP_PHONE` VARCHAR(50) NOT NULL,
  PRIMARY KEY (`SUPP_ID`));
  
Create Table Customer:
 CREATE TABLE `demo`.`customer` (
  `CUS_ID` INT NOT NULL,
  `CUS_NAME` VARCHAR(20) NOT NULL,
  `CUS_PHONE` VARCHAR(10) NOT NULL,
  `CUS_CITY` VARCHAR(30) NOT NULL,
  `CUS_GENDER` CHAR NULL,
  PRIMARY KEY (`CUS_ID`));
 
Create Table Category:
  CREATE TABLE `demo`.`category` (
  `CAT_ID` INT NOT NULL,
  `CAT_NAME` VARCHAR(20) NOT NULL,
  PRIMARY KEY (`CAT_ID`));
  
 
 CREATE TABLE `demo`.`product` (
  `PRO_ID` INT NOT NULL,
  `PRO_NAME` VARCHAR(20) NOT NULL DEFAULT 'Dummy',
  `PRO_DESC` VARCHAR(60) NULL,
  `CAT_ID` INT NULL,
  PRIMARY KEY (`PRO_ID`),
  INDEX `CAT_ID_idx` (`CAT_ID` ASC) VISIBLE,
  CONSTRAINT `CAT_ID`
    FOREIGN KEY (`CAT_ID`)
    REFERENCES `demo`.`category` (`CAT_ID`)
    ON DELETE NO ACTION
    ON UPDATE NO ACTION);
	
Create Table supplier_pricing
CREATE TABLE `demo`.`supplier_pricing` (
  `PRICING_ID` INT NOT NULL,
  `PRO_ID` INT NULL,
  `SUPP_ID` INT NULL,
  `SUPP_PRICE` INT NULL DEFAULT 0,
  PRIMARY KEY (`PRICING_ID`),
  INDEX `PROD_ID_idx` (`PRO_ID` ASC) VISIBLE,
  INDEX `SUPP_ID_idx` (`SUPP_ID` ASC) VISIBLE,
  CONSTRAINT `PROD_ID`
    FOREIGN KEY (`PRO_ID`)
    REFERENCES `demo`.`product` (`PRO_ID`)
    ON DELETE NO ACTION
    ON UPDATE NO ACTION,
  CONSTRAINT `SUPP_ID`
    FOREIGN KEY (`SUPP_ID`)
    REFERENCES `demo`.`supplier` (`SUPP_ID`)
    ON DELETE NO ACTION
    ON UPDATE NO ACTION);

Create Table supplier_pricing	
CREATE TABLE `demo`.`order` (
  `ORD_ID` INT NOT NULL,
  `ORD_AMOUNT` INT NOT NULL,
  `ORD_DATE` DATE NOT NULL,
  `CUS_ID` INT NULL,
  `PRICING_ID` INT NULL,
  PRIMARY KEY (`ORD_ID`),
  INDEX `CUST_ID_idx` (`CUS_ID` ASC) VISIBLE,
  INDEX `PRICING_ID_idx` (`PRICING_ID` ASC) VISIBLE,
  CONSTRAINT `CUST_ID`
    FOREIGN KEY (`CUS_ID`)
    REFERENCES `demo`.`customer` (`CUS_ID`)
    ON DELETE NO ACTION
    ON UPDATE NO ACTION,
  CONSTRAINT `PRICING_ID`
    FOREIGN KEY (`PRICING_ID`)
    REFERENCES `demo`.`supplier_pricing` (`PRICING_ID`)
    ON DELETE NO ACTION
    ON UPDATE NO ACTION);
	
	
 Create Table Rating: 
CREATE TABLE `demo`.`rating` (
  `RAT_ID` INT NOT NULL,
  `ORD_ID` INT NULL,
  `RAT_RATSTARS` INT NOT NULL,
  PRIMARY KEY (`RAT_ID`),
  INDEX `ORD_ID_idx` (`ORD_ID` ASC) VISIBLE,
  CONSTRAINT `ORD_ID`
    FOREIGN KEY (`ORD_ID`)
    REFERENCES `demo`.`order` (`ORD_ID`)
    ON DELETE NO ACTION
    ON UPDATE NO ACTION);


